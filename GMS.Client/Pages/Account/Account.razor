@page "/account"


<div class="bg-white shadow-sm p-4 rounded rounded-3 mt-4">
    <h3 class="fs-3">Change Password</h3>

    <EditForm Model="ChangePasswordDto" OnValidSubmit="ChangePasswordAsync" class="mt-3">
        <DataAnnotationsValidator />
        <div class="mb-3">
            <label class="mb-1">Old Password</label>
            <InputText @bind-Value="ChangePasswordDto.OldPassword" class="form-control" type="password" placeholder="Old Password" />
            <ValidationMessage For="() => ChangePasswordDto.OldPassword" />
        </div>
        <div class="mb-3">
            <label class="mb-1">New Password</label>
            <InputText @bind-Value="ChangePasswordDto.NewPassword" class="form-control" type="password" placeholder="New Password" />
            <ValidationMessage For="() => ChangePasswordDto.NewPassword" />
        </div>
        <div class="d-flex justify-content-end">
            <SpinnerButton Text="Change Password" IsSpinning="@IsChanging" />
        </div>
    </EditForm>

</div>