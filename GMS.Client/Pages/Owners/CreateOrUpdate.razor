@page "/owners/create"
@page "/owners/update/{id:int}"
@attribute [HaveRoles(Roles.Admin)]


<div class="bg-white shadow-sm p-4 rounded rounded-3 mt-4">
    <h3 class="fs-3">@(IsUpdate() ? "Update" : "Create")</h3>

    <EditForm Model="CreateOrUpdateOwnerDto" OnValidSubmit="OnValidSubmit">
        <DataAnnotationsValidator />
        <div class="mb-3">
            <lable class="mb-1">Name</lable>
            <InputText @bind-Value="CreateOrUpdateOwnerDto.Name" class="form-control" placeholder="Name" />
            <ValidationMessage For="() => CreateOrUpdateOwnerDto.Name" />
        </div>
        <div class="mb-3">
            <lable class="mb-1">Email</lable>
            <InputText @bind-Value="CreateOrUpdateOwnerDto.Email" class="form-control" placeholder="Email" />
            <ValidationMessage For="() => CreateOrUpdateOwnerDto.Email" />
        </div>
        <div class="mb-3">
            <label class="mb-1">Phone</label>
            <InputText @bind-Value="CreateOrUpdateOwnerDto.Phone" class="form-control" placeholder="Phone" />
            <ValidationMessage For="() => CreateOrUpdateOwnerDto.Phone" />
        </div>
        <div class="d-flex justify-content-end gap-2">
            <a href="/owners" class="btn btn-secondary">Back</a>
            <SpinnerButton Text="@(IsUpdate() ? "Update":"Create")" IsSpinning="@IsCreatingOrUpdating" />
        </div>
    </EditForm>

</div>
